= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :latex_content
    = f.text_area :latex_content
  .field
    = f.label :category
    = f.select :category, Post::CATEGORIES
  .actions
    = f.submit class: "button"
