.two.columns
  .row
    %ul{:style => "list-style-type: none;"}
      %li{style: "display: inline;"}  
        %h1{style: "display: inline;"} Filters
  .row
    %form.custom
      - Post::CATEGORIES.each do |category|
        .row
          .four.columns
            %label{:for => "checkbox_#{category}", :onclick => "filter('#{category}')"}
              %input{ :type => "checkbox", :id =>"checkbox_#{category}", :style => "display: none;" }
              %span.custom.checkbox{:id => "checkbox_span_#{category}"}
              =category

.nine.columns
  .row
    %ul{:style => "list-style-type: none;"}
      %li{style: "display: inline;"}  
        %h1{style: "display: inline;"} Voting posts
      %li{style: "display: inline;"}
        / .button.large.right{style: "display: inline;"}
        - if current_user != nil
          = link_to "New Post", new_post_path, class: "button large radius right", style: "color: white;"
  #posts_row.row
    - @posts.each do |post|
      .post_panel
        .post_header.clearfix
          .post_info.clearfix
            %h3.post_title
              = post.title
          .extra_info
            %h3.author_name 
              by
              = link_to "#{post.author}", user_path(post.user_id)
              in 
              = post.category
            - if (current_user == nil) || (post.likes_user_ids.include? current_user.id) || (post.user_id == current_user.id)
              .button.round.success.disabled{onclick: "like(#{post.id})", :id => "like_button_#{post.id}"}
                Like
            -else
              .button.round.success{onclick: "like(#{post.id})", :id => "like_button_#{post.id}"}
                Like
        %article.post_container.clearfix
          .image_container
            - if post.latex_content.nil? != true
              %img{:src => "#{post.image_url}", :alt => "Illustrating picture"} 
          .latex_container
            - if post.latex_content.nil? != true
              = post.latex_content
            -else
              No latex content


