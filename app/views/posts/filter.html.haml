#posts_row.row
  - @posts.each do |post|
    #post.panel.radius
      #title.row
        %h3
          = post.title
      #post_body.row
        .eight.columns
          %a{:href => "#{post_path(post)}"}
            %img{:src => "#{post.image_url}"}
          - if post.latex_content.nil? != true
            #latex_content
              = post.latex_content

        .four.columns
          %p
            = post.author
          - if (current_user == nil) || (post.likes_user_ids.include? current_user.id) || (post.user_id == current_user.id)
            .button.round.success.disabled{onclick: "like(#{post.id})", :id => "like_button_#{post.id}"}
              Like
          -else
            .button.round.success{onclick: "like(#{post.id})", :id => "like_button_#{post.id}"}
              Like
          %p{:id => "likes_count_#{post.id}"}
            = post.likes_count
          %p#category
            - if post.category.nil? != true
              = post.category
  %br/
