!!!
%html
  %head
    %title Tmesomething
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .fixed
    %nav.top-bar
      %ul
        %li.name
          %h1=link_to "TmeSomething", root_path
        %li.toggle-topbar
          %a{:href => "#"}
      %section 
        %ul.right
          - if !signed_in?
            %li.divider
            %li= link_to "Sign In", signin_path, class: "active"
            %li.divider
            %li= link_to "Sign Up", signup_path, class: "active" 
          - else
            %li
              %a.active{:href => "#"}
                = current_user.username
            %li.divider
            %li= link_to "Sign Out", signout_path, method: "delete", class: "active"         
    = yield
